<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Playing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/questionImageId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/questionTextId"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="#F15A24"
                        android:textColor="#ffffff"
                        android:padding="30dp"
                        android:layout_margin="10dp"
                        android:visibility="invisible" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/questionLeftIndicatorId"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/showCorrectId"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#009688"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/countDownTimerTextId"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#F44336"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <Button
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:id="@+id/btnAnswerA"
                        android:layout_width="0dp"
                        android:background="#F7931E"
                        android:textColor="#ffffff"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:text="Answer A"/>

                    <Button
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:id="@+id/btnAnswerB"
                        android:background="#F7931E"
                        android:textColor="#ffffff"
                        android:layout_width="0dp"
                        android:textSize="18sp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Answer B"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="#F7931E"
                        android:textColor="#ffffff"
                        android:id="@+id/btnAnswerC"
                        android:layout_width="0dp"
                        android:textSize="18sp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Answer C"/>

                    <Button
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:id="@+id/btnAnswerD"
                        android:background="#F7931E"
                        android:textColor="#ffffff"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="Answer D"/>

                </LinearLayout>

                <Button
                    android:layout_margin="20dp"
                    android:id="@+id/nextId"
                    android:textColor="#000"
                    android:text="N E X T"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/descriptionCardId"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/descriptionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:textColor="#000"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>